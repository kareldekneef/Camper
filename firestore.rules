rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users: owner can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Sub-collections (categories, masterItems, trips, tripItems)
      match /{subcollection}/{docId} {
        // Owner can always read/write
        allow read, write: if request.auth != null && request.auth.uid == userId;

        // Group members can read trips/tripItems if they are in the same group
        allow read: if request.auth != null
          && subcollection in ['trips', 'tripItems']
          && exists(/databases/$(database)/documents/users/$(userId))
          && get(/databases/$(database)/documents/users/$(userId)).data.groupId != null
          && exists(/databases/$(database)/documents/groups/$(get(/databases/$(database)/documents/users/$(userId)).data.groupId))
          && request.auth.uid in get(/databases/$(database)/documents/groups/$(get(/databases/$(database)/documents/users/$(userId)).data.groupId)).data.members;

        // Editors can update tripItems (check permissions on the parent trip)
        allow update: if request.auth != null
          && subcollection == 'tripItems'
          && resource.data.tripId is string
          && exists(/databases/$(database)/documents/users/$(userId)/trips/$(resource.data.tripId))
          && get(/databases/$(database)/documents/users/$(userId)/trips/$(resource.data.tripId)).data.permissions[request.auth.uid] == 'edit';
      }
    }

    // Groups
    match /groups/{groupId} {
      // Any authenticated user can read groups (needed for invite code lookup)
      allow read: if request.auth != null;

      // Any authenticated user can create a group
      allow create: if request.auth != null;

      // Update: existing members OR new user joining (adding themselves to members)
      allow update: if request.auth != null
        && (
          request.auth.uid in resource.data.members
          || request.auth.uid in request.resource.data.members
        );

      // Delete: only existing members
      allow delete: if request.auth != null
        && request.auth.uid in resource.data.members;

      // Group sub-collections (categories, masterItems)
      match /{subcollection}/{docId} {
        allow read: if request.auth != null
          && exists(/databases/$(database)/documents/groups/$(groupId))
          && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        allow write: if request.auth != null
          && exists(/databases/$(database)/documents/groups/$(groupId))
          && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
      }
    }
  }
}
